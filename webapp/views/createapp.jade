doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title 云引力 | 创建应用

    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/nav.css', rel='stylesheet')
    link(href='/stylesheets/createapp.css', rel='stylesheet')
  body
    div.navbar.navbar-default.navbar-fixed-top(role='navigation')
      div.navbar-header
        a.navbar-brand(href='/') 云引力
      ul.nav.navbar-nav
        li
          a(href='/docs') 文档
      ul.nav.navbar-nav.navbar-right
        li.dropdown.user-dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            = user.name
            b.caret
          ul.dropdown-menu
            li
              a(href='/profile') 账户管理
            li.divider
            li
              a(href='/signout') 登出

    div.container
      form.form-create(role='form', action='/app/new', method='post')
        h2.form-create-heading 创建应用
        input.form-control(type='text', placeholder='名称', name='name', required, autofocus)
        textarea.form-control('rows'=6, placeholder='应用描述', name='description')
        input.form-control(type='url', placeholder='URL', name='url')
        button.btn.btn-lg.btn-success.btn-block(type='submit') 创建

    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')