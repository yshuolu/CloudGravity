doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title 云引力 | 登录
    link(href='./stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='./stylesheets/land.css', rel='stylesheet')
    link(href='./stylesheets/nav.css', rel='stylesheet')
  body
    div.navbar.navbar-default.navbar-fixed-top(role='navigation')
      div.navbar-header
        a.navbar-brand(href='/') 云引力
      ul.nav.navbar-nav
        li
          a(href='/docs') 文档
      ul.nav.navbar-nav.navbar-right
        li.active
          a(href='/login') 登录

    div.container
      form.form-signup(role='form', action='/signin', method='post')
        h2.form-signup-heading 登录
        input.form-control(type='email' placeholder='邮箱' name='email' required autofocus)
        input.form-control(type='password' placeholder='密码' name='pass' required)
        label.checkbox
          input(type='checkbox', value='keepin') 
          下次自动登录
        button.btn.btn-lg.btn-default.btn-block(type='submit') 登录